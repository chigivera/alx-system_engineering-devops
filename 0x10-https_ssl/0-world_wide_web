#!/usr/bin/env bash

# Function to get DNS record information
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get the DNS record
    result=$(dig +short "$full_domain")
    
    if [ -z "$result" ]; then
        echo "The subdomain $subdomain does not exist or has no A record."
    else
        echo "The subdomain $subdomain is a A record and points to $result"
    fi
}

# Main script logic
if [ $# -lt 1 ]; then
    echo "Usage: $0 domain [subdomain]"
    exit 1
fi

domain=$1
subdomain=$2

if [ -z "$subdomain" ]; then
    # If no subdomain is provided, display info for all subdomains
    for sub in www lb-01 web-01 web-02; do
        get_dns_info "$domain" "$sub"
    done
else
    # If a subdomain is provided, display info for that subdomain
    get_dns_info "$domain" "$subdomain"
fi